using System;

namespace CsLight
{
    class Program
    {
        static void Main(string[] args)
        {
            string exitCommand = "exit";
            string userCommand;
            bool isWorking = true;

            while (isWorking == true)
            {
                Console.Write("Введите команду: ");
                userCommand = Console.ReadLine();

                if (userCommand == exitCommand)
                {
                    Console.WriteLine("Выход из системы.");
                    isWorking = false;
                }
            }
        }
    }
}
