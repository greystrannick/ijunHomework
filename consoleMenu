using System;

namespace CSLight
{
    class Program
    {
        static void Main(string[] args)
        {
            const string CommandExit = "exit";
            const string CommandTitle = "title";
            const string CommandWsize = "wsize";
            const string CommandHsize = "hsize";
            const string CommandClear = "clear";
            const string CommandBeep = "beep";
            const string CommandBcolor = "bcolor";
            const string CommandFcolor = "fcolor";
            const string CommandRcolor = "rcolor";
            const string CommandHelp = "help";
            const string MenuColorRed = "red";
            const string MenuColorGreen = "green";
            const string MenuColorBlue = "blue";
            
            string setBColor;
            string setFColor;
            string inputCommand = "";

            int widthSize = 10;
            int heightSize = 10;

            while (inputCommand != CommandExit)
            {
                Console.Write("> ");
                inputCommand = Console.ReadLine();

                switch (inputCommand)
                {
                    case CommandTitle:
                        Console.Write("Введите название: ");
                        Console.Title = Console.ReadLine();
                        break;

                    case CommandWsize:
                        Console.WindowWidth = widthSize;
                        break;

                    case CommandHsize:
                        Console.WindowHeight = heightSize;
                        break;

                    case CommandClear:
                        Console.Clear();
                        break;

                    case CommandBeep:
                        Console.Beep();
                        break;

                    case CommandBcolor:
                        Console.Write("Введите цвет(red, green, blue): ");
                        setBColor = Console.ReadLine();
                        switch (setBColor)
                        {
                            case MenuColorRed:
                                Console.BackgroundColor = ConsoleColor.Red;
                                Console.Clear();
                                break;

                            case MenuColorGreen:
                                Console.BackgroundColor = ConsoleColor.Green;
                                Console.Clear();
                                break;

                            case MenuColorBlue:
                                Console.BackgroundColor = ConsoleColor.Blue;
                                Console.Clear();
                                break;

                            default:
                                break;
                        }

                        break;

                    case CommandFcolor:
                        Console.Write("Введите цвет(red, green, blue): ");
                        setFColor = Console.ReadLine();
                        switch (setFColor)
                        {
                            case MenuColorRed:
                                Console.ForegroundColor = ConsoleColor.Red;
                                Console.Clear();
                                break;

                            case MenuColorGreen:
                                Console.ForegroundColor = ConsoleColor.Green;
                                Console.Clear();
                                break;

                            case MenuColorBlue:
                                Console.ForegroundColor = ConsoleColor.Blue;
                                Console.Clear();
                                break;

                            default:
                                break;
                        }

                        break;

                    case CommandRcolor:
                        Console.ResetColor();
                        Console.Clear();
                        break;

                    case CommandHelp:
                        Console.WriteLine("title - изменить название консоли");
                        Console.WriteLine("wsize - установить размер консоли по ширине в 10");
                        Console.WriteLine("hsize - установить размер консоли по высоте в 10");
                        Console.WriteLine("clear - очистить консоль");
                        Console.WriteLine("beep - воспроизвести звуковой сигнал через динамик консоли");
                        Console.WriteLine("bcolor - изменить цвет фона консоли");
                        Console.WriteLine("fсolor - изменить цвет текста консоли");
                        Console.WriteLine("rсolor - установка для цветов фона и текста консоли их значения по умолчанию");
                        Console.WriteLine("exit - выход из программы");
                        break;

                    default:
                        Console.WriteLine("help - помощь по доступным командам");
                        break;
                }
            }
        }
    }
}
