using System;

namespace CsLight
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Как вас зовут? ");
            string respondentName = Console.ReadLine();
            Console.WriteLine("Сколько вам лет? ");
            ushort respondentAge = ushort.Parse(Console.ReadLine());
            Console.WriteLine("Ваш знак зодиака? ");
            string respondentZodiac = Console.ReadLine();
            Console.WriteLine("Где вы работаете? ");
            string respondentWork = Console.ReadLine();

            Console.WriteLine($"Вас зовут {respondentName}, вам {respondentAge} год, ваш знак зодиака {respondentZodiac}, вы работаете {respondentWork}."); ;
        }

    }
}
