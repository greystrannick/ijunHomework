using System;

namespace CsLight
{
    class Program
    {
        static void Main(string[] args)
        {
            int randomNumber;
            int startRow = 5;
            int endRow = 100;
            int multiple3 = 3;
            int multiple5 = 5;
            int sumNumbers = 0;
            Random random = new Random();
            randomNumber = random.Next(startRow, endRow);
            Console.WriteLine("Случайное число: " + randomNumber);

            for (int i = 0; i <= randomNumber; i++)
            {
                if ((i % multiple3 == 0) || (i % multiple5 == 0))
                {
                    sumNumbers += i;
                }
            }
            Console.WriteLine("Сумма чисел меньше случайног кратных 3 и 5: " + sumNumbers);
        }
    }
}
